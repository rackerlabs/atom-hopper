        <author name="Atomhopping Public Relations Department" />
    </defaults>
    
    <host domain="mydomain.com" />
    
    <workspace title="Changes at Atomhopping" resource="/whatsnew/">
        <categories-descriptor reference="workspace-categories-descriptor" />
        
        <feed title="New Products" resource="/products">
            <feed-source reference="hibernate-feed-source" />
            <publisher reference="hibernate-feed-publisher" />
        </feed>
        <feed title="Pricing Changes" resource="/prices">
            <feed-source reference="hibernate-feed-source" />
            <publisher reference="hibernate-feed-publisher" />
        </feed>
    </workspace>
</atom-hopper-config>